{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "types": [
            "@webgpu/types"
        ],
        "paths": {
            "@fluid-2d/*": [
                "./packages/fluid-2d/*"
            ],
            "@fluid-3d/*": [
                "./packages/fluid-3d/*"
            ],
            "@studio/*": [
                "./packages/studio/*"
            ]
        },
        "baseUrl": "."
    },
    "include": [
        "src",
        "packages"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
